{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "incremental": true,
    "baseUrl": ".",
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": [".eslintrc.cjs", "**/*.ts", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
